<block wx:if="{{$taroCompReady}}">
    <view class="authorInfo">
        <image class="head-img" lazy-load="{{true}}" mode="widthFix" src="{{authorInfo.imgUrl ? authorInfo.imgUrl : 'https://cdn.jsdelivr.net/gh/haveyuan/poetry_img/head/default.jpg'}}"></image>
        <view class="name">{{authorInfo.name}}</view><text class="desc">{{authorInfo.description}}</text>
    </view>
</block>