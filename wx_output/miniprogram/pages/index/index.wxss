page, .Index {
  width: 100%;
  height: 100%;
}
.Index {
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 100% 100%;
  display: flex;
  align-items: center;
}
.Index .title-bg {
  width: 100%;
}
.Index .index-title {
  color: "#333";
  height: 32Px;
  max-width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 32Px;
  display: block;
  text-align: center;
  position: absolute;
  margin-left: 50%;
  -webkit-transform: translate(-50%, 0);
          transform: translate(-50%, 0);
}
.Index .all {
  width: 100%;
  height: 600rpx;
  margin: 0 auto;
}
.Index .all .all-item .ct-item {
  width: 95%;
  height: 600rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 16rpx;
  border: 1rpx solid #ccc;
  box-sizing: border-box;
  margin: 0 auto;
  padding: 18rpx 20rpx;
  overflow: hidden;
  box-shadow: 0 0 4rpx #ccc;
}
.Index .all .all-item .ct-item .title {
  font-family: 'Times New Roman', Times, serif;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin: 18rpx auto;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.Index .all .all-item .ct-item .intro {
  font-size: 28rpx;
  text-indent: 2em;
  line-height: 44rpx;
  text-align: justify;
  padding: 20rpx 0;
}